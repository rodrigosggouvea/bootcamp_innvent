<!DOCTYPE html>
<html>
  <head>
    <title>Todo - Innvent Bootcamp</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= yield :js %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  	<%= render partial: "shared/menu" %>

    <div class="container">
      <% if flash[:notice] %>
        <p style="color:green;"><%= flash[:notice]%></p>
      <% end %>
      <% if flash[:error] %>
        <p style="color:red;"><%= flash[:error]%></p>
      <% end %>

	    <%= yield %>

      <footer>
        <hr>
        <p>Â© <a href="http://www.innvent.com.br/" target="_blank">Innvent</a> <%= DateTime.now.year %></p>
      </footer>
    </div>    
  </body>
  <script type="text/javascript">
    $(".modal_form").dialog({
      autoOpen: false,
      modal: true
    });

    $(".modal_button").click(function(){
      $(".modal_form").dialog("open");
    });
  </script>
</html>
